FROM python:3.9-slim

WORKDIR /app

# Install system dependencies in a single RUN command
# Group commands to reduce layers and use --no-install-recommends to reduce size
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    python3-dev \
    curl \
    # Dependencies for PyMuPDF
    libmupdf-dev \
    libfreetype6-dev \
    libharfbuzz-dev \
    libffi-dev \
    # Clean up
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file and install dependencies
COPY requirements.txt .

# Install Python dependencies more efficiently
# Pin versions to avoid unnecessary upgrades and use --no-cache-dir
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir huggingface_hub[hf_xet]

# Set up NLTK data directory with proper permissions
ENV NLTK_DATA=/app/nltk_data
RUN mkdir -p $NLTK_DATA && chmod -R 777 $NLTK_DATA

# Simple download of punkt tokenizer
RUN python -m nltk.downloader -d /app/nltk_data punkt

# Create necessary directories
RUN mkdir -p Documents

# Copy the entire project
COPY . .

# Expose the API port
EXPOSE 8000

# Start the API server
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]