FROM python:3.9-slim

WORKDIR /app

# Install system dependencies in a single RUN command
# Group commands to reduce layers and use --no-install-recommends to reduce size
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    python3-dev \
    curl \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file and install dependencies
COPY requirements.txt .

# Install Python dependencies more efficiently
# Pin versions to avoid unnecessary upgrades and use --no-cache-dir
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir pypdf>=3.15.0 nltk>=3.8.1 \
    && pip install --no-cache-dir huggingface_hub[hf_xet]

# Download only essential NLTK data instead of all data
# This will significantly reduce build time
RUN python -c "import nltk; nltk.download('punkt', quiet=True)"

# Create necessary directories
RUN mkdir -p Documents

# Copy the entire project
COPY . .

# Expose the API port
EXPOSE 8000

# Start the API server
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]